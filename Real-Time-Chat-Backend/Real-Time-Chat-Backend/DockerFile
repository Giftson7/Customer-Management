# ----------- Base Runtime Layer -------------
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app

# Expose HTTP port
EXPOSE 6001

# ----------- Build Layer --------------------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# Copy csproj and restore dependencies
COPY Real-Time-Chat-Backend.csproj .
RUN dotnet restore "Real-Time-Chat-Backend.csproj"

# Copy the rest of the source code
COPY . .

# Build the project
RUN dotnet build "Real-Time-Chat-Backend.csproj" -c $BUILD_CONFIGURATION -o /app/build

# ----------- Publish Layer ------------------
FROM build AS publish
RUN dotnet publish "Real-Time-Chat-Backend.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# ----------- Final Runtime Layer ------------
FROM base AS final

# Create non-root user
RUN addgroup --system appgroup && adduser --system --ingroup appgroup appuser
USER appuser

# Copy published output
COPY --from=publish /app/publish .

# Start app
ENTRYPOINT ["dotnet", "Real-Time-Chat-Backend.dll"]
